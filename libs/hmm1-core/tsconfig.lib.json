{
  "compilerOptions": {
    "declaration": true,
    "outDir": "out-tsc/lib",
    "types": ["node", "vite/client"]
  },
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts"]
}
